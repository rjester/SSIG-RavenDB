@model Ssig.ViewModels.AdminEditViewModel
@{
    ViewBag.Title = "Edit";
}
<div id="body">
    <section class="content-wrapper">
        <h2>Edit</h2>

        @using (Html.BeginForm()) {
            @Html.ValidationSummary(true)

                            <div class="editor-label">
                    @Html.LabelFor(model => model.Meeting.Name)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Meeting.Name)
                    @Html.ValidationMessageFor(model => model.Meeting.Name)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Meeting.MeetingDate)
                </div>
                <div class="editor-field">
                    @(Html.Kendo().DatePicker()
                        .Name("Meeting.MeetingDate")
                        .Value(Model.Meeting.MeetingDate))
                    @Html.ValidationMessageFor(model => model.Meeting.MeetingDate)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Meeting.Description)
                </div>

                @(Html.Kendo().Editor()
                    .Name("Meeting.Description")
                    .HtmlAttributes(new { style = "width: 740px;height:440px" })
                    .Value(HttpUtility.HtmlDecode(Model.Meeting.Description))
                )
                @Html.ValidationMessageFor(model => model.Meeting.Description)


                


            

            
                            <p>
                    <input type="submit" value="Save" />
                </p>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
